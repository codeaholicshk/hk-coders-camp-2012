-# encoding: utf-8
.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "Hong Kong Code Camp", "/", class: "brand"
      #main-menu.nav-collapse
        %ul#main-menu-left.nav
          %li= link_to "Ideas", "/ideas"
          %li= link_to "Coders", "/coders"
          %li= link_to "Blog", "/posts"

        %ul#main-menu-right.nav.pull-right
          - if current_account
            %li
              = link_to "#" do
                = gravatar_tag(current_account, size: 20)
                me
          - else
            %li
              = link_to '/auth/github' do
                Register

            %li.dropdown
              =link_to "#", {:class => "dropdown-toggle", :data => {:toggle => "dropdown", :target => "#"}} do
                = locale_name
                <b class="caret"></b>
              %ul.dropdown-menu
                %li
                  = link_to "Switch Language", "#"
                %li.divider
                - ALL_LOCALE.map do |key, value|                              
                  %li
                    =link_to value, "/#{key}"                            