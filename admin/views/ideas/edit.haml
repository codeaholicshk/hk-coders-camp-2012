.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:ideas, :index)
      %li=link_to pat(:new), url(:ideas, :new)
      %li.active=link_to pat(:edit), url(:ideas, :edit, :id => @idea.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:idea)
    .inner
      -form_for :idea, url(:ideas, :update, :id => @idea.id), :method => :put, :class => :form do |f|
        =partial "ideas/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
