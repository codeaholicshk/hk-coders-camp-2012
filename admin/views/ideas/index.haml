.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:ideas, :index)
      %li=link_to pat(:new), url(:ideas, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:ideas)
    .inner
      %table.table
        %tr
          %th.first=mat(:idea, :_type)
          %th=mat(:idea, :_id)
          %th=mat(:idea, :created_at)
          %th=mat(:idea, :updated_at)
          %th=mat(:idea, :name)
          %th=mat(:idea, :description)
          %th=mat(:idea, :cool_thing1)
          %th=mat(:idea, :cool_thing2)
          %th=mat(:idea, :cool_thing3)
          %th.last="&nbsp;"
        -@ideas.each do |idea|
          %tr
            %td.first=idea._type
            %td=idea._id
            %td=idea.created_at
            %td=idea.updated_at
            %td=idea.name
            %td=idea.description
            %td=idea.cool_thing1
            %td=idea.cool_thing2
            %td=idea.cool_thing3
            %td.last
              =button_to pat(:edit), url(:ideas, :edit, id: idea.id), method: :get, class: :button_to
              ="|"
              =button_to pat(:delete), url(:ideas, :destroy, id: idea.id), method: :delete, class: :button_to, onsubmit: "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
